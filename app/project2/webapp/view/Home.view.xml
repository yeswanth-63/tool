<mvc:View
    controllerName="project2.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:mdc="sap.ui.mdc"
    xmlns:table="sap.ui.mdc.table"
    height="100%">

    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <Button
                    id="sideNavigationToggleButton"
                    icon="sap-icon://menu2"
                    type="Transparent"
                    press="onSideNavButtonPress">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
                    <Image  src="test-resources/sap/tnt/images/SAP_Logo.png" decorative="false" press="onLogoPressed" tooltip="SAP Logo" width="60px"              height="30px">
                    <layoutData>
                        <OverflowToolbarLayoutData  priority="NeverOverflow"/>
                    </layoutData>
                </Image>
                <Text text="Resource Management Tool" class="sapUiH2" />
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:sideContent>
            
    <tnt:SideNavigation id="sideNavigation" expanded="true"
        itemSelect="onItemSelect"
        selectedKey="home">
        <tnt:NavigationList>
            <tnt:NavigationListItem key="home" text="Home" icon="sap-icon://home" />
            
            <tnt:NavigationListGroup text="Master data management">
                <tnt:NavigationListItem key="customers" text="Customers" icon="sap-icon://people-connected" />
                <tnt:NavigationListItem key="opportunities" text="Opportunities" icon="sap-icon://building" />
                <tnt:NavigationListItem key="projects" text="Projects" icon="sap-icon://project-definition" />
                <tnt:NavigationListItem key="sapid" text="SAP ID" icon="sap-icon://key" />
                <tnt:NavigationListItem key="employees" text="Employees" icon="sap-icon://employee" />
            </tnt:NavigationListGroup>

            <tnt:NavigationListGroup text="Allocations">
                <tnt:NavigationListItem key="overview" text="Projects overview" icon="sap-icon://overview-chart" />
                <tnt:NavigationListItem key="requirements" text="Resource requirements" icon="sap-icon://business-objects-experience" />
            </tnt:NavigationListGroup>

            <tnt:NavigationListGroup text="Reports">
                <tnt:NavigationListItem key="bench" text="Bench" icon="sap-icon://group" />
                <tnt:NavigationListItem key="pendingProjects" text="Pending projects" icon="sap-icon://pending" />
                <tnt:NavigationListItem key="pendingOpportunities" text="Pending opportunities" icon="sap-icon://initiative" />
            </tnt:NavigationListGroup>
        </tnt:NavigationList>
    </tnt:SideNavigation>

        </tnt:sideContent>

       <tnt:mainContents>
    <NavContainer id="pageContainer" initialPage="root1">
        <pages>
            <ScrollContainer id="root1" horizontal="false" vertical="true" height="100%" class="sapUiContentPadding">
                <Text text="Welcome to the Home Page" />
            </ScrollContainer>

            <!-- Master Data Pages -->
            <ScrollContainer id="customersPage" horizontal="false" vertical="true" height="100%" class="sapUiContentPadding">
                <Text text="Customers Page" />
            </ScrollContainer>
            <ScrollContainer id="opportunitiesPage" horizontal="false" vertical="true" height="100%" class="sapUiContentPadding">
                <Text text="Opportunities Page" />
            </ScrollContainer>
            <ScrollContainer id="projectsPage" horizontal="false" vertical="true" height="100%" class="sapUiContentPadding">
                <Text text="Projects Page" />
            </ScrollContainer>
            <ScrollContainer id="sapidPage" horizontal="false" vertical="true" height="100%" class="sapUiContentPadding">
                <Text text="SAP ID Page" />
            </ScrollContainer>
            <ScrollContainer id="employeesPage" horizontal="false" vertical="true" height="100%" class="sapUiContentPadding">
                <Text text="Employees Page" />
            </ScrollContainer>

            <!-- Allocation Pages -->
            <ScrollContainer id="overviewPage" horizontal="false" vertical="true" height="100%" class="sapUiContentPadding">
                <Text text="Projects Overview Page" />
            </ScrollContainer>
            <ScrollContainer id="requirementsPage" horizontal="false" vertical="true" height="100%" class="sapUiContentPadding">
                <Text text="Resource Requirements Page" />
            </ScrollContainer>

            <!-- Reports Pages -->
            <ScrollContainer id="benchPage" horizontal="false" vertical="true" height="100%" class="sapUiContentPadding">
                <Text text="Bench Report Page" />
            </ScrollContainer>
            <ScrollContainer id="pendingProjectsPage" horizontal="false" vertical="true" height="100%" class="sapUiContentPadding">
                <Text text="Pending Projects Page" />
            </ScrollContainer>
            <ScrollContainer id="pendingOpportunitiesPage" horizontal="false" vertical="true" height="100%" class="sapUiContentPadding">
                <Text text="Pending Opportunities Page" />
            </ScrollContainer>
        </pages>
    </NavContainer>
</tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>