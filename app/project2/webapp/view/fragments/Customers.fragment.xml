<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns="sap.m"
                         xmlns:mdc="sap.ui.mdc"
                         xmlns:table="sap.ui.mdc.table">

    <VBox class="sapUiSmallMargin">
        
        <mdc:Table
            id="Customers"
            header="Customers"
            autoBindOnInit="true"
            width="100%"
            p13nMode="Column,Sort,Filter,Group"
            selectionMode="Multi"
            delegate='{
                "name": "project2/delegate/CustomersTableDelegate",
                "payload": {
                    "collectionPath": "Customers"
                }
            }'
            showRowCount="true"
            threshold="1000"
            enableExport="true"
            enableAutoColumnWidth="true"
            selectionChange="onSelectionChange">
           
            <mdc:type>
                <table:ResponsiveTableType />
            </mdc:type>

            <!-- âœ… Heading and Buttons in actions toolbar -->
            <mdc:actions>
                <OverflowToolbar>
                    <!-- Save and Cancel Buttons -->
                    <HBox >
                        <Button
                            id="saveButton"
                            text="Save"
                            type="Accept"
                            enabled="false"
                            press="onSaveButtonPress"
                        />
                        <Button
                            id="cancelButton"
                            text="Cancel"
                            type="Reject"
                            enabled="false"
                            press="onCancelButtonPress"
                            class="sapUiSmallMarginBegin"
                        />
                    </HBox>
                    <!-- Action Buttons -->
                    <Button icon="sap-icon://add" id="btnAdd" tooltip="Add" press="onAdd"/>
                    <Button icon="sap-icon://delete" id="btnDelete_cus" tooltip="Delete" press="onDeletePress" enabled="false"/>
                    <Button icon="sap-icon://edit" id="btnEdit_cus" tooltip="Edit" press="onEditPress" enabled="false"/>
                    <Button text="Test Cancel" id="btnTestCancel" tooltip="Test Direct Cancel" press="testCancelDirect"/>
                </OverflowToolbar>
            </mdc:actions>
            <mdc:copyProvider>
					<plugins.CopyProvider id="copyProvider"/>
			</mdc:copyProvider>
        </mdc:Table>
    </VBox>
</core:FragmentDefinition>