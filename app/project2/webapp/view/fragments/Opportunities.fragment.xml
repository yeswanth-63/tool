<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns="sap.m"
                         xmlns:mdc="sap.ui.mdc"
                         xmlns:table="sap.ui.mdc.table">

    <VBox class="sapUiSmallMargin">

        <mdc:Table
            id="Opportunities"
            header="Opportunities"
            autoBindOnInit="true"
            width="100%"
            p13nMode="Column,Sort,Filter,Group"
            selectionMode="Multi"
            delegate='{
                "name": "project2/delegate/OpportunitiesTableDelegate",
                "payload": {
                    "collectionPath": "Opportunities"
                }
            }'
            showRowCount="true"
            threshold="1000"
            enableExport="true"
            enableAutoColumnWidth="true"
            selectionChange="onSelectionChange">

            <mdc:type>
                <table:ResponsiveTableType />
            </mdc:type>

            <!-- âœ… Heading and Buttons in actions toolbar -->
            <mdc:actions>
                <OverflowToolbar>
                    <!-- Save and Cancel Buttons -->
                    <HBox >
                        <Button
                            id="saveButton_oppr"
                            text="Save"
                            type="Accept"
                            enabled="false"
                            press="onSaveButtonPress"
                        />
                        <Button
                            id="cancelButton_oppr"
                            text="Cancel"
                            type="Reject"
                            enabled="false"
                            press="onCancelButtonPress"
                            class="sapUiSmallMarginBegin"
                        />
                    </HBox>
                    <!-- Action Buttons -->
                    <Button icon="sap-icon://add" id="btnAdd_oppr" tooltip="Add" press="onAdd"/>
                    <Button icon="sap-icon://delete" id="btnDelete_oppr"  tooltip="Delete_oppr" press="onDeletePress" enabled="false"/>
                    <Button icon="sap-icon://edit" id="btnEdit_oppr" tooltip="Edit_oppr" press="onEditPress" enabled="false"/>
                </OverflowToolbar>
            </mdc:actions>
            <mdc:copyProvider>
					<plugins.CopyProvider id="copyProvider_oppr"/>
			</mdc:copyProvider>

        </mdc:Table>
    </VBox>
</core:FragmentDefinition>